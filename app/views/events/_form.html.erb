<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field form-group">
    <%= f.label :laundromat_id %><br>
    <%= f.select :laundromat_id, @laundromats.collect {|i| [i.name, i.id] }, {include_blank: '--'} %>
  </div>
  <%= f.hidden_field :user_id, :value => session[:id] %>
  <div class="actions">
      <%= link_to 'Retour', root_path, class: 'btn btn-default' %><%= f.submit 'Enregistrer', class: 'btn btn-default' %>
  </div>
<% end %>