<h1>Liste des laveries</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Capacité</th>
      <th>N° de téléphone</th>
      <th>N° de rue</th>
      <th>Rue</th>
      <th>Code postal</th>
      <th>Ville</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laundromats.each do |laundromat| %>
      <tr>
        <td><%= laundromat.name %></td>
        <td><%= laundromat.capacity %></td>
        <td><%= laundromat.phone %></td>
        <td><%= laundromat.nbstreet %></td>
        <td><%= laundromat.libstreet %></td>
        <td><%= laundromat.zipcode %></td>
        <td><%= laundromat.libcity %></td>
        <td><%= link_to 'Voir', laundromat %></td>
        <td><%= link_to 'Modifier', edit_laundromat_path(laundromat) %></td>
        <td><%= link_to 'Supprimer', laundromat, method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if session[:id] %>
    <%= link_to 'Ajouter une laverie', new_laundromat_path %>
<% end %>
